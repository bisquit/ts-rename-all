{
  "name": "tsrep",
  "description": "replicate typescript files with renaming symbols",
  "version": "0.0.0",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "exports": "./dist/index.js",
  "bin": {
    "tsrep": "./dist/cli.js"
  },
  "engines": {
    "node": "^18.0.0"
  },
  "scripts": {
    "dev": "tsx src/cli.ts",
    "build": "tsup src/index.ts src/cli.ts --format esm --clean"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.0",
    "@types/debug": "^4.1.8",
    "@types/node": "^20.4.7",
    "@types/react": "^18.2.18",
    "@types/shelljs": "^0.8.12",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "eslint": "^8.43.0",
    "eslint-plugin-perfectionist": "^1.4.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "prettier": "^3.0.0",
    "react": "^18.2.0",
    "ts-morph": "^19.0.0",
    "tsup": "^7.2.0",
    "tsx": "^3.12.7",
    "typescript": "^5.1.5"
  },
  "prettier": {
    "singleQuote": true
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "simple-import-sort"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/explicit-module-boundary-types": 0,
      "@typescript-eslint/no-non-null-assertion": 0,
      "simple-import-sort/imports": "warn",
      "simple-import-sort/exports": "warn"
    }
  },
  "config": {
    "commitizen": {
      "types": [
        {
          "value": "feat",
          "name": "feat:     New feature"
        },
        {
          "value": "fix",
          "name": "fix:      Bug fix"
        },
        {
          "value": "improve",
          "name": "improve:  Improves feature or performance"
        },
        {
          "value": "docs",
          "name": "docs:     Documentation only changes"
        },
        {
          "value": "refactor",
          "name": "refactor: Code refactoring"
        },
        {
          "value": "chore",
          "name": "chore:    Other changes that don't modify src or test files"
        }
      ],
      "skipQuestions": [
        "scope",
        "body",
        "footerPrefix",
        "footer"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bisquit/tsrep.git"
  },
  "bugs": {
    "url": "https://github.com/bisquit/tsrep/issues"
  },
  "dependencies": {
    "@clack/prompts": "^0.6.3",
    "change-case": "^4.1.2",
    "cleye": "^1.3.2",
    "debug": "^4.3.4",
    "picocolors": "^1.0.0",
    "shelljs": "^0.8.5"
  }
}
